[include]
    path = ~/.gitconfig.local
[core]
    editor = vim
    excludesfile = ~/.gitignore.global
    pager = diff-highlight | less
[color]
    diff = auto
    status = auto
    branch = auto
[alias]
    ci = commit -v
    co = checkout
    st = status
    br = branch
    di = diff
    dio = diff --name-only
    dis = diff --staged
    diso = diff --staged --name-only
    dim = diff master
    dimo = diff master --name-only
[merge]
    tool = meld
[mergetool]
    keepBackup = false
    keepTemporaries = false
[push]
    default = simple
[http]
    postBuffer = 524288000
[rebase]
    autosquash = true
